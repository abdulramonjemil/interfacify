{
  "extends": ["airbnb-base", "prettier"],
  "rules": {
    "no-param-reassign": "off",
    "import/extensions": ["error", "always", { "js": "never" }],
    "lines-between-class-members": [
      "error",
      "always",
      { "exceptAfterSingleLine": true }
    ],
    "no-restricted-syntax": "off",
    "arrow-parens": ["error", "always"],
    "semi": ["error", "never"],
    "quotes": ["error", "double"],
    "valid-typeof": "off",
    "no-plusplus": "off"
  },
  "env": {
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2022
  }
}
